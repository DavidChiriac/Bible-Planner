{
  "name": "bible-planner",
  "version": "0.8.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build:mobile": "ng build --configuration production --base-href ./",
    "build": "npm run build:mobile && npm run postbuild:pages",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build:pages": "ng build --configuration production --base-href \"/Bible-Planner/\"",
    "postbuild:pages": "node -e \"require('fs').copyFileSync('dist/bible-planner/browser/index.csr.html','dist/bible-planner/browser/index.html')\"",
    "deploy": "npm run build:pages && npm run postbuild:pages && gh-pages -d dist/bible-planner/browser",
    "serve:ssr:bible-planner": "node dist/bible-planner/server/server.mjs",
    "capacitor:sync": "npx cap sync android",
    "capacitor:run": "npx cap run android"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "21.1.4",
    "@angular/common": "21.1.4",
    "@angular/compiler": "21.1.4",
    "@angular/core": "21.1.4",
    "@angular/fire": "^21.0.0-rc.0-canary.ac3dd7c",
    "@angular/forms": "21.1.4",
    "@angular/platform-browser": "21.1.4",
    "@angular/platform-browser-dynamic": "21.1.4",
    "@angular/platform-server": "21.1.4",
    "@angular/router": "21.1.4",
    "@angular/ssr": "^21.1.4",
    "@capacitor-firebase/authentication": "^8.0.1",
    "@capacitor/android": "^8.1.0",
    "@capacitor/cli": "^8.1.0",
    "@capacitor/core": "^8.1.0",
    "@capgo/capacitor-social-login": "^8.3.1",
    "@primeuix/themes": "^2.0.3",
    "express": "^5.1.0",
    "firebase": "^12.9.0",
    "ngx-device-detector": "^11.0.0",
    "ngx-webstorage": "^21.0.1",
    "primeflex": "^4.0.0",
    "primeicons": "^7.0.0",
    "primeng": "^21.1.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "21.1.4",
    "@angular/cli": "21.1.4",
    "@angular/compiler-cli": "^21.1.3",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.19",
    "angular-cli-ghpages": "^3.0.2",
    "gh-pages": "^6.3.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "typescript": "~5.9.3"
  }
}
